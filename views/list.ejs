<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> List </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form action="/delete" method="post">
        <div class="item">
          <!-- Instead of saying on, it will give the item id number as a value when the checkbox gets checked
             -->
          <input type="checkbox" name="checkbox" value="<%= newListItems[i]._id %>" onChange="this.form.submit()">
          <p><%=  newListItems[i].name  %></p>
        </div>
      </form>
    <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
